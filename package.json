{
  "name": "kanva",
  "version": "0.7.74",
  "description": "Draw on canvas using views",
  "homepage": "https://github.com/headline-1/kanva",
  "bugs": "https://github.com/headline-1/kanva/issues",
  "author": "Krzysztof Miemiec <krzysztof.miemiec@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "lerna exec -- yarn && lerna bootstrap",
    "build": "lerna exec tsc",
    "build:watch": "lerna exec --parallel 'yarn start || tsc -w --preserveWatchOutput'",
    "start": "yarn build && yarn build:watch",
    "clean": "rimraf packages/*/{dist,.jest,reports} && rimraf dist",
    "purge": "yarn clean && rimraf node_modules",
    "dist": "./scripts/pack.sh",
    "lint": "eslint ./packages/**/src --ext ts",
    "link:all": "lerna exec -- yarn link",
    "unlink:all": "lerna exec -- yarn unlink",
    "pretest": "yarn lint",
    "test": "jest --config='./jest.config.js' --json --outputFile='./reports/test.json' --coverage --detectOpenHandles",
    "test:watch": "lerna exec -- yarn test:watch",
    "version:new": "yarn version --no-git-tag-version --no-commit-hooks && lerna version --yes --no-git-tag-version --no-commit-hooks",
    "version:bump": "yarn version --patch --no-git-tag-version --no-commit-hooks && lerna version patch --yes --no-git-tag-version --no-commit-hooks && git add */package.json package.json lerna.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn version:bump",
      "pre-push": "yarn lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@types/d3-scale": "^2.1.1",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.134",
    "@types/node": "^12.0.8",
    "@types/react": "16.8.7",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "8.0.5",
    "eslint": "^5.16.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.3",
    "typescript": "^3.5.2",
    "webpack": "^4.34.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@types/react": "16.8.7"
  }
}
