{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "stripInternal": false,
    "lib": [
      "es5",
      "es6",
      "esnext",
      "dom"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./spec/*.ts",
    "./packages/*/src/**/*.ts",
    "./packages/*/src/**/*.json"
  ],
  "exclude": [
    "./packages/*/src/**/spec/**",
    "./packages/*/src/**/*.spec.ts"
  ]
}
